@model string

@Html.TextAreaFor(m => m, 5, 5, new { @class = "form-control" })
<script>
    $("textarea").summernote({
        dialogsInBody: true,
        dialogsFade: true,
        placeholder: '@Resource.Description',
        minHeight: 250,
        focus: true,
        toolbar: [
            ['style', ['style', 'fontsize', 'fontname']],
            ['font', ['bold', 'italic', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol']]
        ]
    });
    $(".note-editable").css("font-family", "Segoe UI");
</script>