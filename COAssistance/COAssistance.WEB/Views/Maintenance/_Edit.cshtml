@model MaintenanceEditModel
<div id="modal-block" class="">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h4 class="modal-title">@Resource.EditRecord</h4>
    </div>
    @using (Html.BeginForm("Edit", "Maintenance", FormMethod.Post, new { autocomplete = "off", id = "formb" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.MaintenanceId)
        @Html.ValidationSummaryWithCheck(true)
        <div class="modal-body">
            <div class="form-group">
                @Html.LabelRequiredFor(m => m.PasswordLength, new { @class = "text-error margin-l-2" })
                @Html.EditorFor(e => e.PasswordLength, new { htmlAttributes = new { @class = "form-control", placeholder = Resource.PasswordLength } })
                @Html.ValidationMessageFor(m => m.PasswordLength, string.Empty, new { @class = "text-error" })
            </div>
            <div class="form-group">
                @Html.LabelRequiredFor(m => m.PasswordSpecialCharacters, new { @class = "text-error margin-l-2" })
                @Html.EditorFor(e => e.PasswordSpecialCharacters, new { htmlAttributes = new { @class = "form-control", placeholder = Resource.SpecialCharacters } })
                @Html.ValidationMessageFor(m => m.PasswordSpecialCharacters, string.Empty, new { @class = "text-error" })
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-flat pull-left" data-dismiss="modal">@Resource.Cancel</button>
            <button onclick="return AHelper.postData()" class="btn btn-danger btn-flat">@Resource.Submit</button>
        </div>
    }
    @Html.Partial("_Validation", "formb")
</div>