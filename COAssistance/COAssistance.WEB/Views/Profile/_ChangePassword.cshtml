@model ProfileChangePasswordModel
<div id="modal-block">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h4 class="modal-title">@Resource.PasswordReset</h4>
    </div>
    @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { autocomplete = "off", id = "formb" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummaryWithCheck(true)
        <div class="modal-body">
            @ViewHelpers.ParagraphInfo(Resource.PasswordStrengthInfo)
            <div class="form-group">
                @Html.LabelRequiredFor(m => m.OldPassword, new { @class = "text-error margin-l-2" })
                @Html.PasswordFor(e => e.OldPassword, new { @class = "form-control", placeholder = Resource.OldPassword })
                @Html.ValidationMessageFor(m => m.OldPassword, string.Empty, new { @class = "text-error" })
            </div>
            <div class="form-group">
                @Html.LabelRequiredFor(m => m.NewPassword, new { @class = "text-error margin-l-2" })
                @Html.PasswordFor(e => e.NewPassword, new { @class = "form-control", placeholder = Resource.NewPassword })
                @Html.ValidationMessageFor(m => m.NewPassword, string.Empty, new { @class = "text-error" })
            </div>
            <div class="form-group">
                @Html.LabelRequiredFor(m => m.ConfirmedPassword, new { @class = "text-error margin-l-2" })
                @Html.PasswordFor(e => e.ConfirmedPassword, new { @class = "form-control", placeholder = Resource.ConfirmedPasswordNote })
                @Html.ValidationMessageFor(m => m.ConfirmedPassword, string.Empty, new { @class = "text-error" })
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-flat pull-left" data-dismiss="modal">@Resource.Cancel</button>
            <button onclick="return AHelper.postData();" class="btn btn-danger btn-flat">@Resource.Submit</button>
        </div>
    }
    @Html.Partial("_Validation", "formb")
</div>