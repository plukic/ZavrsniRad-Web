@model SignInModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@Resource.SignIn</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/bundles/css/core")
</head>
<body style="background-image:url(../../Content/template/img/signin-template.jpg);" class="hold-transition login-page">
    <div class="login-box">
        <div class="login-box-body">
            <div class="login-logo">
                <a>
                    @AssistanceConstants.ApplicationName
                </a>
            </div>
            @using (Html.BeginRouteForm(AccessRoutes.SignIn, null, FormMethod.Post, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ReturnUrl)
                @Html.ValidationSummaryWithCheck(true)                
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = Resource.UserName })
                    <span class="fa fa-user form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.UserName, string.Empty, new { @class = "text-error" })
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = Resource.Password })
                    <i class="fa fa-lock form-control-feedback"></i>
                    @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "text-error" })
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <button class="btn bg-red btn-block btn-flat">
                            <i class="fa fa-sign-in margin-r-5"></i>@Resource.SignIn
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>