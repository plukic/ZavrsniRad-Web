@model UserGroupsEditModel
<div id="modal-block">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h4 class="modal-title">@Resource.EditRecord</h4>
    </div>
    @using (Html.BeginForm("Edit", "UserGroups", FormMethod.Post, new { autocomplete = "off", id = "formb" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        @Html.ValidationSummaryWithCheck(true)
        <div class="modal-body">
            <div class="form-group">
                @Html.LabelRequiredFor(m => m.ConfigurationGroup, new { @class = "text-error margin-l-2" })
                @Html.EditorFor(e => e.ConfigurationGroup, new { htmlAttributes = new { @readonly = true, @class = "form-control", placeholder = Resource.Group } })
                @Html.ValidationMessageFor(m => m.ConfigurationGroup, string.Empty, new { @class = "text-error" })
            </div>
            <div class="form-group">
                @Html.LabelRequiredFor(m => m.SupportNumber, new { @class = "text-error margin-l-2" })
                @Html.TextBoxFor(m => m.SupportNumber, new { @class = "form-control", placeholder = Resource.PhoneNumber })
                @Html.ValidationMessageFor(m => m.SupportNumber, string.Empty, new { @class = "text-error" })
            </div>
            <div class="form-group">
                @Html.LabelRequiredFor(m => m.LanguageId, new { @class = "text-error margin-l-2" })
                @Html.DropDownListFor(m => m.LanguageId, Model.Languages, Resource.ChooseLanguage, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LanguageId, string.Empty, new { @class = "text-error" })
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-flat pull-left" data-dismiss="modal">@Resource.Cancel</button>
            <button onclick="return AHelper.postData()" class="btn btn-danger btn-flat">@Resource.Submit</button>
        </div>
    }
    @Html.Partial("_Validation", "formb")
</div>