@model IEnumerable<UserGroupsModel>
<div class="table-box">
    @Html.AntiForgeryToken()
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>@Resource.Name</th>
                <th>@Resource.Language</th>
                <th>@Resource.PhoneNumber</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GroupName</td>
                    <td>@item.Language</td>
                    <td>@item.SupportNumber</td>
                    <td>
                        <ul>
                            <li><a title="@Resource.Edit" class="modal-link" href="@Url.RouteUrl(UserGroupsRoutes.Edit, new { groupId = item.Id })"><i class="fa fa-pencil"></i></a></li>
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>